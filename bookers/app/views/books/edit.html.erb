<body>
	<h1>Editing Book</h1>
	
	  <div id="error_explanation">
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
	
	<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
	  <div class="field">
	  	<h4>Title</h4>
	  	<%= f.text_field :title %>
  	  </div>
  	  <div class="field">
	  	<h4>Body</h4>
		  <%= f.text_area :body %>
	  </div>
	  <div class="action">
		  <%= f.submit 'Update Book' %>
      </div>
	  <div>
		<%= link_to "Show", book_path(@book) %>
		<spam>|</spam>
		<%= link_to "Back", books_path %>
	  </div>
	<% end %>
</body>